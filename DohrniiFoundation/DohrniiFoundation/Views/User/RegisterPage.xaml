                                <Frame BorderColor="{Binding ConfirmPasswordFrameBorderColor}" Style="{StaticResource FrameBlueStyle}" />
                                <cntrl:NoOutlineEntry
                                    Margin="8,0,0,0"
                                    IsPassword="True"
                                    Placeholder="{x:Static resource:DFResources.ConfirmPasswordPlaceholder}"
