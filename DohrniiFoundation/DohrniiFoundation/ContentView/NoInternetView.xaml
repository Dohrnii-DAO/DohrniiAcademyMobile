<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
              xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             xmlns:resource="clr-namespace:DohrniiFoundation.Resources"
             x:Class="DohrniiFoundation.Views.NoInternetView">
    <ContentView.Content>
        <StackLayout IsVisible="{Binding IsInternet}" Padding="0" Margin="0, 0, 0,-1" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" HeightRequest="40" BackgroundColor="{StaticResource RedText}" >
            <Label Text="{x:Static resource:DFResources.NoInternetConnectionText}" Style="{StaticResource NoInternetLabelStyle}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>