        <ControlTemplate x:Key="HeaderTemplateWithHamburger">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Aspect="Fill"
                    HorizontalOptions="FillAndExpand"
                    Source="Dashboardbg"
                    VerticalOptions="FillAndExpand" />
                <Grid
                    Grid.Row="0"
                    ColumnSpacing="0"
                    RowSpacing="0"
                    VerticalOptions="Start">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="16"
                        Padding="0"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <ImageButton
                            x:Name="Hamburger"
                            BackgroundColor="Transparent"
                            Command="{TemplateBinding BindingContext.MenuCommand}"
                            CommandParameter="1"
                            HeightRequest="40"
                            HorizontalOptions="StartAndExpand"
                            Source="Hamburger"
                            WidthRequest="40" />
                        <Label
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Style="{StaticResource HeaderTextStyle}"
                            Text="{TemplateBinding BindingContext.PageTitle}"
                            VerticalTextAlignment="Center" />
                    </Grid>
                    <StackLayout
                        Grid.Row="1"
                        HorizontalOptions="FillAndExpand"
                        Spacing="0"
                        VerticalOptions="FillAndExpand">
                        <ContentPresenter />
                    </StackLayout>
                </Grid>
            </Grid>
        </ControlTemplate>
